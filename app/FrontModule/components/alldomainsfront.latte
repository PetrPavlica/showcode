{* Latte template *}

{block content}
                        
<!-- row -->
        <div class="row mt">
          <div class="col-md-12">
            <div class="content-panel">
              <table class="table table-striped table-advance table-hover">
                <h4><i class="fa fa-angle-right"></i> Lidé</h4>
                <hr>
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Doména</th>
                    <th>FTP</th>
                    <th>Datum vytvoření</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                {foreach $allDomains as $domains}    
                  <tr>
                    <td>
                      {$domains['id']}
                    </td>
                    
                    <td>{$domains['domain']}</td>
                    <td>{$domains['ftp']}</td>
                    <td>{$domains['date_create']}</td>
                    
                    <td>
                        {if $domains['active'] == 1}
                            <span class="label label-success">Aktivní</span>
                        {elseif $domains['active'] == 0}
                            <span class="label label-danger label-mini">Vypnutý</span>
                        {/if}
                       
                  
                    </td>
                    <td>
                    {if $allDomainsUser[$domains['id']]==true}
                      <button class="btn btn-success btn-xs" value="{$domains['id'].'.'.'domain'}" data-toggle="modal" data-target="#exampleModalPass" id="{$domains['id']}" onclick="getSendId(this)"><i class="fa fa-eye"></i></button>  
                     {/if}
                      <a href="{plink DomainsFront:db,$domains['id']}"><button class="btn btn-primary btn-xs"><i class="fa fa-database"></i></button></a>  
                     
                      <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button>
                    </td>
                  </tr>
                     
                  {/foreach} 
                </tbody>
              </table>
            </div>
            <!-- /content-panel -->
          </div>
          <!-- /col-md-12 -->
        </div>
        <!-- /row -->
 
