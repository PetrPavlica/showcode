{block content}
<div class="row mt">
          <div class="col-lg-12">
            <div class="form-panel">
              <h4 class="mb"><i class="fa fa-angle-right"></i> Ověřit uživatele</h4>
                 <form n:name="sendPassForm" class='form-horizontal style-form'>

                  <input n:name='id_send_email' type='hidden' id='id_send_email'>
                    <div class='form-group'>
                        <label n:name='email' class="col-sm-2 col-sm-2 control-label" for="email">Odeslání</label>
                       <div class="col-sm-8"> 
                        <input n:name='email' type='text' id='email' class="form-control round-form"/>
                       </div> 
                    </div> 
                   
                     
                    <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                      <button n:name='send' class="btn btn-theme" type="submit">Odeslat</button>
                      
                    </div>
                  </div>
                </form>
            </div>
           </div>
</div>
<script type="text/javascript">
        function getEmailId(element) {
           document.getElementById('id_send_email').value =element.value;
        }
    </script>